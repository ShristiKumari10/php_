    function checkvowel ($ch)
    {
        switch($ch)
        {
            case 'a':
                echo "Given character {$ch} is vowel";
                break;

                case 'e':
                    echo "Given character {$ch} is vowel";
                    break;

                    case 'i':
                        echo "Given character {$ch} is vowel";
                        break;

                        case 'o':
                            echo "Given character {$ch} is vowel";
                            break;

                            case 'u':
                                echo "Given character {$ch} is vowel";
                                break;

                                case 'A':
                                    echo "Given character {$ch} is vowel";
                                    break;

                                    case 'E':
                                        echo "Given character {$ch} is vowel";
                                        break;

                                        case 'I':
                                            echo "Given character {$ch} is vowel";
                                            break;

                                            case 'O':
                                                echo "Given character {$ch} is vowel";
                                                break;

                                                case 'U':
                                                    echo "Given character {$ch} is vowel";
                                                    break;

                                                    default:
                                                    echo "Given character {$ch} is Consonant";
                                                }
        }
    

    ?>
